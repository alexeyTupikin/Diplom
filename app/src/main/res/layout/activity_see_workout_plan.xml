<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModuleClient.SeeWorkoutPlan">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="ПЛАН ТРЕНИРОВОК"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        style="@style/editTextStyle"
        android:background="@color/edit_text_background"
        android:backgroundTint="@color/hint_color"
        android:backgroundTintMode="add"
        android:textSize="20sp"
        android:text="День первый:\n\n"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textViewDay2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"
        style="@style/editTextStyle"
        android:background="@color/edit_text_background"
        android:backgroundTint="@color/hint_color"
        android:backgroundTintMode="add"
        android:textSize="20sp"
        android:text="День второй:\n\n"
        app:layout_constraintBottom_toTopOf="@+id/textViewDay3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDay1" />

    <TextView
        android:id="@+id/textViewDay3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"
        android:layout_marginBottom="50dp"
        android:textSize="20sp"
        style="@style/editTextStyle"
        android:background="@color/edit_text_background"
        android:backgroundTint="@color/hint_color"
        android:backgroundTintMode="add"
        android:text="День третий:\n\n"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewLabelDay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="День первый"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewDay1"
        app:layout_constraintTop_toBottomOf="@+id/textViewDay1" />

    <TextView
        android:id="@+id/textViewLabelDay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="День второй"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewDay2"
        app:layout_constraintTop_toBottomOf="@+id/textViewDay2" />

    <TextView
        android:id="@+id/textViewLabelDay3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="День третий"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewDay3"
        app:layout_constraintTop_toBottomOf="@+id/textViewDay3" />
</androidx.constraintlayout.widget.ConstraintLayout>